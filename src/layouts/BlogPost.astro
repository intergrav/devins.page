---
import Layout from "./Layout.astro";
import BlogMeta from "../components/BlogMeta.astro";

const { post } = Astro.props;
const {
	title = "",
	description = "",
	pubDate,
	categories,
	image,
	imageAlt,
} = post.data;
---

<Layout {title} {description}>
	{
		image && (
			<img
				src={image}
				alt={imageAlt || ""}
				style="float: right; margin-left: 1rem; margin-block: 1rem; height: 128px"
				transition:name={`blog-image-${post.slug}`}
			/>
		)
	}
	<h1 transition:name={`blog-title-${post.slug}`}>{title}</h1>
	<BlogMeta {pubDate} {categories} slug={post.slug} />
	<p transition:name={`blog-description-${post.slug}`}>{description}.</p>
	<slot />
</Layout>
